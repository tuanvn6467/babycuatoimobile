@using iGoo.Helpers
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Viện Công nghệ thông tin & Truyền thông - CDiT</title>
<meta name="robots" content="noindex,nofollow" />
<link href="@Url.Content("~/Source/webcms/styles/styles.css")" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="@Url.Content("~/Script/jquery.js")"></script> 
<script type="text/javascript" src="@Url.Content("~/Script/libs_webcms.js")"></script>
<script src="@Url.Content("~/Script/jquery.validate.js")" type="text/javascript"></script>
<script type="text/javascript">
    $().ready(function () {
        datetime('datetime', 'VN');
        $("#frmLogin").validate({
            errorPlacement: function(error, element) {},
		    rules:{
			    txtUser: "required",
                txtPassword: "required"
		    }
	    });
    });
</script>
</head>

<body>
<div class="wrapper">
    <!-- End toolbar -->
    <div class="logo fix" style="margin:0;">
    	@*<a class="hone" target="_blank" href="http://cdit.ptit.edu.vn/"><img style="max-height:100%;height:auto;width:100%;max-width:100%;margin:auto;
display:block;" src="@Url.Content("~/Source/webcms/images/logo.png")" /></a>
        <a class="partner" target="_blank" href="http://cdit.ptit.edu.vn/"><img height="64" width ="474" src="@Url.Content("~/Source/webcms/images/logo-partner.png")" /></a>*@
        @*<div class="datetime">
        	<span id="datetime"></span>
        </div>*@
        <div class="cl"></div>
    </div>
    <!-- Emd logo -->
    <div class="login">
    <form method="POST" action="@Url.Action("Check")" id="frmLogin">
        @if (@Request.Get("error").Equals("1"))
        {
        <p class="error">Tên hoặc mật khẩu không đúng!</p>
        }
        <p><label>Tên đăng nhập </label><input name="txtUser" type="text" /></p>
        <p><label>Mật khẩu </label><input type="password" name="txtPassword" /></p>
        <p><button type="reset">Làm lại</button><button type="submit">Đăng nhập</button></p>
    </form>
    </div>
    <!-- End main -->
  <div class="footer">
    	<span class="copyright"> <a href="http://cdit.ptit.edu.vn/" target="_blank" title="Viện Công nghệ thông tin & Truyền thông - CDiT">Viện Công nghệ thông tin & Truyền thông - CDiT </a> </span>
    </div>
    <!-- End footer -->
</div> 
</body>
</html>
